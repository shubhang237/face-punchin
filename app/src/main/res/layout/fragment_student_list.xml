<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textSize="20sp"
        android:textAlignment="center"
        android:text="Attendance List"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_weight="6"
        android:id="@+id/studentListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/markAttendance"
        android:layout_weight="1"
        android:text="MARK"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageButton
        android:background="@color/white"
        android:src="@drawable/ic_folder_open_black_24dp"
        android:id="@+id/galleryAttendance"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageButton
        android:background="@color/white"
        android:src="@drawable/ic_photo_camera_blue_24dp"
        android:id="@+id/photoAttendance"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

        <ToggleButton
            android:textColor="@color/colorPrimary"
            android:text="PRO"
            android:background="@color/white"
            android:id="@+id/mode"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
            />

    </LinearLayout>

</LinearLayout>