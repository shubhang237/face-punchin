<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Student.SignInActivity">

    <ImageView
        android:padding="10dp"
        android:layout_weight="7"
        android:src="@drawable/ic_assignment_turned_in_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_margin="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_margin="2dp"
                android:layout_weight="9"
                android:padding="5dp"
                android:src="@drawable/ic_email_blue_24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/emailID"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:hint="@string/registered_email_address"
                android:textColorHint="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_margin="2dp"
                android:padding="5dp"
                android:layout_weight="9"
                android:src="@drawable/ic_lock_blue_24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/password"
                android:inputType="textPassword"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:hint="@string/enter_password"
                android:textColorHint="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_margin="2dp"
                android:padding="5dp"
                android:layout_weight="9"
                android:src="@drawable/ic_beach_access_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/baseUrl"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:hint="Enter IP Address"
                android:textColorHint="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/showPassword"
            android:textColor="@color/colorPrimary"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Show Password"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/MyCheckBox"/>
    </LinearLayout>

    <Button
        android:id="@+id/login"
        android:background="@color/colorPrimary"
        android:text="Login"
        android:textColor="@color/white"
        android:layout_margin="40dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>